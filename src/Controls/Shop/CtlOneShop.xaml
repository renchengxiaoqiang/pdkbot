<UserControl x:Class="PdkBot.Controls.Shop.CtlOneShop"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             xmlns:local="clr-namespace:PdkBot.Controls.Shop" 
             xmlns:ui1="http://schemas.inkore.net/lib/ui/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderThickness="2" CornerRadius="4">
        <StackPanel>
            <Button Name="btnOneShop" Width="120" Height="150" Padding="5" BorderThickness="2">
                <Button.Content>
                    <StackPanel>
                        <ui:ImageIcon x:Name="iconAvatar" VerticalAlignment="Center"  HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtUserName" HorizontalAlignment="Center" FontWeight="Bold" FontSize="14" Margin="0 5 0 0"/>
                    </StackPanel>
                </Button.Content>
            </Button>
        </StackPanel>
    </Border>
</UserControl>
